<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sekimsour.project_attandence.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/textSpacerNoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_toolbar"
            android:background="?attr/colorPrimary"
            android:elevation="0dp"
            android:weightSum="1"
            app:layout_scrollFlags="scroll"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <TextView
                android:id="@+id/showtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="22sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/v_profile"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_gravity="end"
                android:layout_marginRight="10dp"
                android:src="@drawable/img_profile"
                app:civ_border_color="@color/colorBackground"
                app:civ_border_width="0.3dp" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textSpacerNoTitle"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/lllll"
            android:layout_weight="1"
            android:weightSum="9"
            android:orientation="vertical">
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7-8" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8-9" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9-10" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10-11" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1-2" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2-3" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3-4" />
            <TextView
                style="@style/header_style_time"
                android:id="@+id/tv_time8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4-5" />
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_schedule"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6">

        </android.support.v4.view.ViewPager>

    </LinearLayout>


</RelativeLayout>
