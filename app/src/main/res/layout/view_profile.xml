<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="20dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_in_alert"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_profile"
        app:civ_border_color="#000000"
        app:civ_border_width="0.3dp"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_below="@+id/profile_in_alert"
        android:id="@+id/name_in_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="19sp"
        android:text="SE KIMSOUR"/>
    <TextView
        android:id="@+id/id_in_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_in_alert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:text="e20130674"/>


    <TextView
        android:id="@+id/change_password_in_alert"
        android:gravity="center"
        android:textSize="11sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/changepassword"
        android:layout_below="@+id/id_in_alert"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />


    <ImageView
        android:id="@+id/back_in_alert"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/img_back_profile"/>

</RelativeLayout>