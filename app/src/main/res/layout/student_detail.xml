<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/detail_in_alert"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_profile"
            app:civ_border_color="#000000"
            app:civ_border_width="0.3dp" />

        <TextView
            android:id="@+id/name_in_alert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/detail_in_alert"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="SE KIMSOUR"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/id_in_alert1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_in_alert1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="e20130674"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/back_in_alert1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:srcCompat="@drawable/img_back_profile" />

    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/img_profile"
        app:civ_border_color="#000000"
        app:civ_border_width="0.3dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_in_alert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="SE KIMSOUR"
        android:textSize="19sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_in_alert"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="e20130674"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/id_in_alert"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/changepassword"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/img_back_profile" />
</LinearLayout>